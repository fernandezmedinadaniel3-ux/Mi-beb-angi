<body>
  <div class="card">
    <h1>Te amo Angeline üíñ</h1>
    <div class="buttons">
      <button class="yes" id="btnYes">¬°S√≠, as√≠!</button>
      <button class="no" id="btnNo">No</button>
    </div>
    <div class="message" id="message"></div>
    <div class="hearts" id="hearts"></div>
  </div>

  <script>
    const btnYes = document.getElementById('btnYes');
    const btnNo = document.getElementById('btnNo');
    const message = document.getElementById('message');
    const hearts = document.getElementById('hearts');
    let noSize = 1;

    // Funci√≥n para corazones
    function spawnHeart(){
      const el = document.createElement('div');
      const size = 20 + Math.random()*30;
      el.style.position='absolute';
      el.style.left=(Math.random()*100)+'%';
      el.style.bottom='0';
      el.style.width=size+'px';
      el.style.height=size+'px';
      el.style.opacity=0.9;
      el.innerHTML='<svg viewBox="0 0 24 24" width="100%" height="100%"><path fill="'+randomColor()+'" d="M12 21s-7-4.35-9-7.35S1 7.5 6 5.5c2.2-1 4.8-.7 6 1 1.2-1.7 3.8-2 6-1 5 2 4 8.15 3 8.15S19 16.1 12 21z"/></svg>';
      hearts.appendChild(el);
      const rise = 300 + Math.random()*200;
      el.animate([
        { transform:`translateY(0px)`, opacity:1 },
        { transform:`translateY(-${rise}px)`, opacity:0 }
      ], { duration:2000, easing:'ease-out' });
      setTimeout(()=>el.remove(),2000);
    }

    function randomColor(){
      const colors=['#ff477e','#ff8ab8','#ffd166','#7afcff','#9b5cff'];
      return colors[Math.floor(Math.random()*colors.length)];
    }

    // Evento S√≠
    btnYes.addEventListener('click',()=>{
      message.textContent="¬°Sab√≠a que dir√≠as que s√≠, Angeline! ‚ù§Ô∏è";
      for(let i=0;i<20;i++){
        setTimeout(()=>spawnHeart(),i*100);
      }
    });

    // Evento No
    btnNo.addEventListener('click',()=>{
      noSize -= 0.15;
      if(noSize <= 0){
        btnNo.style.display='none';
        message.textContent="Jijiji‚Ä¶ el No desapareci√≥, amorcito üòò";
      } else {
        btnNo.style.transform=`scale(${noSize})`;
      }
    });
  </script>
</body>

